{
  "name": "Universal JS Template",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "forwardPorts": [3000, 4000, 5173, 8080],
  "portsAttributes": {
    "3000": { "onAutoForward": "openBrowser" },
    "4000": { "onAutoForward": "openBrowser" },
    "5173": { "onAutoForward": "openBrowser" },
    "8080": { "onAutoForward": "openBrowser" }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/run-app.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
